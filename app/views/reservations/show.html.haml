%table.table.table-striped
  %tbody
    %tr
      %td Title
      %td Description
      %td Number of tickets available
    %tr
      %td= @reservation.title
      %td= @event.description
      %td= @event.number_of_tickets_available
      %td
        - if @event.tickets_available?
          = link_to 'Reservation', :controller => "reservations", :action => "show"
        - else
          not available
%br/